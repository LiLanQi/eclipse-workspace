package com.zzxtit.spring.aop.xml;

import org.junit.Before;
import org.junit.Test;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.zzxtit.spring.aop.BankService;
import com.zzxtit.spring.aop.BankServiceImpl;

public class TestXMLAOp {
	
	private ApplicationContext ioc;
	
	@Before
	public void initIoc() {
		ioc = new ClassPathXmlApplicationContext("config/applicationContextAop.xml");
	}
	
	@Test
	public void test() {
		BankServiceImpl bs = ioc.getBean("bankService", BankServiceImpl.class);
		bs.withdraw("123");;
	}

}
